        var returnUrl = "http://transport.man.jd.com/";
        var qrCheck;

        function refreshImage() {
            var now = new Date();
            $("#qr_image").attr("src", "/sso/image?v=33&t=" + now.getTime());
            stopCheck();
            startCheck();
            $('.warntip').hide();
        }

        function stopCheck() {
            if (qrCheck != null) {
                timeout = true;
                window.clearInterval(qrCheck);
            }
        }

